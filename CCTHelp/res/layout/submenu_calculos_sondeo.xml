<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnsbmsondeo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calc_auto_submenu_sondeo"
        android:height="50dp"
        android:background="@drawable/buttonlayoutselector"
        android:onClick="onClick" />

    <Button
        android:id="@+id/btnsbmsondeo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calc_man_submenu_sondeo" 
        android:height="50dp"
        android:background="@drawable/buttonlayoutselector"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/btnsbmsondeo3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calc_carg_submenu_sondeo"
        android:height="50dp"
        android:background="@drawable/buttonlayoutselector"
        android:onClick="onClick" />
</LinearLayout>
